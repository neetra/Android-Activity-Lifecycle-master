<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3CAD8"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.testapp.MainActivity">

    <TextView
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:text="Activity A"
        android:textColor="#03506B"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/opendialog"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:background="#EACB94"
            android:gravity="center|center_vertical"
            android:text="show Dialog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:background="#EACB94"
            android:gravity="center"
            android:onClick="switchActivity"
            android:shadowColor="#934242"
            android:text="Start Activity B"
            android:textColor="#2E2A2A"
            android:textColorHighlight="#634A4A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="364dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/counterActivityA"
            android:layout_width="346dp"
            android:layout_height="53dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#2D3667"
            tools:text="TextView" />

        <Button
            android:id="@+id/button2"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:background="#2C465A"
            android:gravity="center"
            android:onClick="onClickClose"
            android:text="Close App"
            android:textColor="#F4F0F0" />
    </LinearLayout>

</LinearLayout>
